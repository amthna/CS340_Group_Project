<h1>Birders</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Active member?</th>

            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, common name, and latin name }}
        {{#each birders}}
        <tr>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.is_active}}</td>

            {{! DELETE form }}
            <form id='delete_birder_form' method= "POST" action= "/birders/delete">
                <input type='hidden' name='delete_birder_id' value='{{this.birder_id}}' />
                <input type='hidden' name='delete_birder_name' value='{{this.first_name}} {{this.last_name}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a birder</h2>
<form class='cuForm' id='create_birder_form'>
    <label for='create_birder_fname'>First Name: </label>
    <input type='text' name='create_birder_fname' id='create_birder_fname' required />

    <label for='create_birder_lname'>Last Name: </label>
    <input type='text' name='create_birder_lname' id='create_birder_lname' />

    <label for='create_birder_email'>Email: </label>
    <input type='text' name='create_birder_email' id='create_birder_email' />

    {{! Member since and is_active should be set automatically}}

    <input type='submit' />
</form>

{{! UPDATE form }}
<h2>Update a birder</h2>
<form class='cuForm' id='update_person_form'>
    <label for='update_birder_id'>Person to Update: </label>
    <select name='update_birder_id' id='update_birder_id' required>
        <option value='' disabled selected>Select a birder</option>
        {{#each birders}}
        <option value='{{this.birder_id}}' required>
            {{this.birder_id}}
            {{this.first_name}}
            {{this.last_name}}
        </option>
        {{/each}}
    </select>

    <label for='update_birder_fname'>First Name: </label>
    <input type='text' name='update_birder_fname' id='update_birder_fname' required />

    <label for='create_birder_lname'>Last Name: </label>
    <input type='text' name='update_birder_lname' id='update_birder_lname' />

    <label for='create_birder_email'>Email: </label>
    <input type='text' name='update_birder_email' id='update_birder_email' />

    <label for='update_person_is_active'>Change is_active: </label>
    <select name='update_birder_is_active' id='update_birder_is_active' required>
        <option value=1>Yes</option>
        <option value=0>No</option>
    </select>
    <input type='submit' />
</form>